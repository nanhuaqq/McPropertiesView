<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bj__cxk_cx_canpei_block_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCarTypeName"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:maxLines="3"
            android:textColor="#333333"
            android:lines="2"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/default_divider"
            />

        <TextView
            android:id="@+id/tvChangeCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:textColor="#666666"
            android:background="@drawable/bj__cxk_cx_duibi_bottom_grey_bg"
            android:text="切换车型"
            android:textSize="13dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ibtnRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:src="@drawable/bj__ic_close_02" />
</FrameLayout>
